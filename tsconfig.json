{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "libs",
        "module": "Node16",
        "moduleResolution": "Node16",
        "lib": [
            "ES2016",
        ],
        "strict": true,
        "allowJs": true,
        "declarationDir": "./libs/types",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "skipLibCheck": true,
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules",
    ],
}
