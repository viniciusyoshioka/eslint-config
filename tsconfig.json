{
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "libs",
        "module": "ESNext",
        "lib": [
            "ESNext",
        ],
        "strict": true,
        "allowJs": true,
        "declarationDir": "./libs/types",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "skipLibCheck": true,
    },
    "include": [
        "src/**/*",
        "tests/**/*",
        "eslint.config.js",
    ],
    "exclude": [
        "node_modules",
    ],
}
