{
  "name": "@vinicius1313/eslint-config",
  "description": "Eslint configuration (includes JS and TS linting and formatting)",
  "version": "1.2.2",
  "license": "MIT",
  "main": ".eslintrc.js",
  "files": [
    "lib",
    "src",
    ".eslintrc.js",
    "README.md"
  ],
  "author": "Vinicius Yoshioka <71671043+viniciusyoshioka@users.noreply.github.com> (https://github.com/viniciusyoshioka)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viniciusyoshioka/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/viniciusyoshioka/eslint-config/issues"
  },
  "homepage": "https://github.com/viniciusyoshioka/eslint-config",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "JavaScript",
    "JS",
    "TypeScript",
    "TS",
    "configuration",
    "config",
    "eslint",
    "lint",
    "format",
    "formatting"
  ],
  "scripts": {
    "build:commonjs": "tsc -p ./configs/tsconfig.cjs.json",
    "build:module": "tsc -p ./configs/tsconfig.esm.json",
    "build:types": "tsc -p ./configs/tsconfig.types.json",
    "build": "yarn build:commonjs && yarn build:module && yarn build:types"
  },
  "peerDependencies": {
    "eslint": "*",
    "typescript": "*"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/eslint__js": "^8.42.3",
    "@types/react": "^18.3.11",
    "eslint": "^9.12.0",
    "react": "^18.3.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1"
  }
}
