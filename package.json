{
    "name": "@vinicius1313/eslint-config",
    "description": "Eslint configuration (includes linting and formatting for JS and TS)",
    "version": "2.2.0",
    "license": "MIT",
    "type": "module",
    "exports": {
        ".": {
            "types": "./libs/types/index.d.ts",
            "require": "./src/configs/legacy.cjs",
            "import": "./src/index.js",
            "default": "./src/index.js"
        }
    },
    "files": [
        "libs",
        "src",
        "README.md"
    ],
    "author": "Vinicius Yoshioka <71671043+viniciusyoshioka@users.noreply.github.com> (https://github.com/viniciusyoshioka)",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/viniciusyoshioka/eslint-config.git"
    },
    "bugs": {
        "url": "https://github.com/viniciusyoshioka/eslint-config/issues"
    },
    "homepage": "https://github.com/viniciusyoshioka/eslint-config",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "keywords": [
        "JavaScript",
        "JS",
        "TypeScript",
        "TS",
        "configuration",
        "config",
        "eslint",
        "lint",
        "format",
        "formatting"
    ],
    "scripts": {
        "typecheck": "tsc --noEmit",
        "lint": "eslint '**/*.{js,cjs,mjs,jsx,ts,cts,mts,tsx}'",
        "build": "tsc",
        "prepublish": "rm -rf ./libs && yarn build && rm ./libs/tsconfig.build.tsbuildinfo",
        "publish": "npm publish"
    },
    "peerDependencies": {
        "@stylistic/eslint-plugin": ">= 5.5.0",
        "eslint": ">= 9",
        "typescript": ">=4.8.4 <6.0.0",
        "typescript-eslint": ">= 8.46.4"
    },
    "peerDependenciesMeta": {
        "@stylistic/eslint-plugin": {
            "optional": true
        },
        "typescript": {
            "optional": true
        },
        "typescript-eslint": {
            "optional": true
        }
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@stylistic/eslint-plugin": "^5.6.1",
        "@types/react": "^19.2.7",
        "@vinicius1313/tsconfig": "^2.0.0",
        "eslint": "^9.39.2",
        "react": "^19.2.3",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.51.0"
    }
}
